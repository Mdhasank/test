    pipeline {
    agent any

    stages {
        stage('Connect to Remote Server via SSH') {
            steps {
                withCredentials([sshUserPrivateKey(credentialsId: ec2_ssh', 
                                                  keyFileVariable: 'SSH_KEY',
                                                  usernameVariable: 'ec2-user')]) {
                    sh '''
                        echo "Connecting to remote server..."
                        ssh -i $SSH_KEY -o StrictHostKeyChecking=no $SSH_USER@your.remote.server "hostname && uptime"
                    '''
                }
            }
        }
    }
}
